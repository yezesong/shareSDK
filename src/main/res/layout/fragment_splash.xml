<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:progressbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/changeColor"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:onClick="doClose"
        android:text="@string/exit_btn"
        android:textColor="#FF005699"
        android:textSize="35sp" />

    <magcomm.android.com.sharesdk.views.BounceView
        android:id="@+id/bounceView"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0"/>

    <magcomm.android.com.sharesdk.views.CircleProgressBar
        android:id="@+id/circle_progressbar"
        android:layout_margin="10dip"
        progressbar:progress_text_size="20sp"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:layout_width="match_parent"
        android:layout_height="120dip"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
</LinearLayout>